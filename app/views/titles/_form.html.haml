= form_for @title do |f|
  - if @title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@title.errors.count, "error")} prohibited this title from being saved:"
      %ul
        - @title.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :registry_id
    = f.number_field :registry_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :abbreviation
    = f.text_field :abbreviation
  .field
    = f.label :prefix
    = f.check_box :prefix
  .actions
    = f.submit 'Save'
