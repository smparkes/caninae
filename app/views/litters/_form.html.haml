= form_for @litter do |f|
  - if @litter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@litter.errors.count, "error")} prohibited this litter from being saved:"
      %ul
        - @litter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :mother_id
    = f.number_field :mother_id
  .field
    = f.label :father_id
    = f.number_field :father_id
  .field
    = f.label :event_id
    = f.number_field :event_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
