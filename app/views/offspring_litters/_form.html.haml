= form_for @offspring_litter do |f|
  - if @offspring_litter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@offspring_litter.errors.count, "error")} prohibited this offspring_litter from being saved:"
      %ul
        - @offspring_litter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :litter_id
    = f.number_field :litter_id
  .field
    = f.label :offspring_id
    = f.number_field :offspring_id
  .actions
    = f.submit 'Save'
