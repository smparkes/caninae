= form_for @kennel do |f|
  - if @kennel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kennel.errors.count, "error")} prohibited this kennel from being saved:"
      %ul
        - @kennel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address_id
    = f.number_field :address_id
  .actions
    = f.submit 'Save'
