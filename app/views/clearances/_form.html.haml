= form_for @clearance do |f|
  - if @clearance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clearance.errors.count, "error")} prohibited this clearance from being saved:"
      %ul
        - @clearance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :animal_id
    = f.number_field :animal_id
  .actions
    = f.submit 'Save'
