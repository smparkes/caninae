    %th Entity type
    %th String
    %th Type
    %th Date
    %th Time
    %th Location
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.entity_id
      %td= event.integer
      %td= event.entity_type
      %td= event.string
      %td= event.type
      %td= event.date
      %td= event.time
      %td= event.location_id
